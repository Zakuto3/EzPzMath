<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/answer_result_box"
        app:layout_constraintRight_toLeftOf="@id/answer_result_box"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/joyfultheatre"
            android:text="Wins"/>
        <TextView
            android:id="@+id/wincount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/joyfultheatre"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/backButton_game"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/outset_border_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/soundButton_game"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/outset_border_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sound_on"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/answer_result_box"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/results"
            android:text=""
            app:layout_constraintLeft_toLeftOf="@id/answer_result_box"
            app:layout_constraintRight_toLeftOf="@id/answer"
            app:layout_constraintTop_toTopOf="@id/answer_result_box"
            android:textSize="30dp"
            android:fontFamily="@font/joyfultheatre"
            android:textColor="@color/textcolor"
            />

        <Button
            android:id="@+id/answer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/results"
            android:text=""
            app:layout_constraintRight_toRightOf="@id/answer_result_box"
            app:layout_constraintLeft_toRightOf="@id/result"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textcolor"
            android:textSize="30dp"
            android:fontFamily="@font/joyfultheatre"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/answer_parent_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        app:layout_constraintTop_toBottomOf="@id/pasAnswers_LAYOUT"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/answerBoxLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toLeftOf="@id/submit_button"
            app:layout_constraintEnd_toStartOf="@id/submit_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
            <Button
                android:id="@+id/submit_button"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:text="Submit"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/joyfultheatre"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/answerBoxLayout"
                android:background="@drawable/gradient_background_submit"
                />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/pasAnswers_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center"
        android:background="@drawable/past_answers"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_parent_box"
        app:layout_constraintTop_toBottomOf="@id/answerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="260dp">
            <LinearLayout
                android:id="@+id/pastAnswers"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:divider="@drawable/past_answer_divider"
                android:showDividers="middle"
                android:background="@color/textcolor"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/textcolor"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pasAnswers_LAYOUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_result_box" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/text_layout_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/answer_result_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/joyfultheatre"
            android:gravity="center"
            android:text="Result"
            android:textColor="@color/textcolor"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="@id/text_layout_box"
            app:layout_constraintRight_toLeftOf="@id/textView2"
            app:layout_constraintTop_toTopOf="@id/text_layout_box" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="Answer"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/text_layout_box"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toRightOf="@id/textView"
            android:textSize="15dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/joyfultheatre"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/joyfultheatre"
        android:text="Timer"
        android:textColor="@color/textcolor"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/answer_result_box"
        app:layout_constraintRight_toLeftOf="@id/answer_result_box"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/stage_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/answerLayout"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/stage_1"
            android:tag="stage_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/completed_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/stage_2"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />
        <ImageView
            android:id="@+id/stage_2"
            android:tag="stage_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/completed_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/stage_1"
            app:layout_constraintRight_toLeftOf="@+id/stage_3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/stage_3"
            android:tag="stage_3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/current_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/stage_2"
            app:layout_constraintRight_toLeftOf="@+id/stage_4"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/stage_4"
            android:tag="stage_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/empty_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/stage_3"
            app:layout_constraintRight_toLeftOf="@id/stage_5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/stage_5"
            android:tag="stage_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/empty_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/stage_4"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/check_mark"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_check_green"
        />

</android.support.constraint.ConstraintLayout>